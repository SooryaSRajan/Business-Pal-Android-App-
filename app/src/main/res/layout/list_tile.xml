<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="16dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/businessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/anonymous_pro"
            android:maxLines="1"
            android:paddingRight="16dp"
            android:text="Snackers Republic"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:maxLines="6"
            android:ellipsize="end"
            android:id="@+id/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/anonymous_pro"
            android:paddingRight="16dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/businessTitle"
            app:layout_constraintTop_toBottomOf="@+id/businessTitle"
            tools:text="New shop created on bla bla bla bla bla blasad sasadsadaa sdsasadsadsa dasdasa sdassadas asdasdasdas dasdasdassa dasdasds New shop created on bla bla bla bla bla blasad sasadsadaa sdsasadsadsa dasdasa sdassadas asdasdasdas dasdasdassa dasdasds New shop created on bla bla bla bla bla blasad sasadsadaa sdsasadsadsa dasdasa sdassadas asdasdasdas dasdasdassa dasdasds" />

        <TextView
            android:id="@+id/createdTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/anonymous_pro"
            android:text="Created on:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/caption"
            app:layout_constraintTop_toBottomOf="@+id/caption" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>